@model LMIS.WEB.ViewModels.LoginViewModel
@{
    Layout = null;
}
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var host = Configuration.GetSection("HostingSettings")["Host"];
    var protocol = Configuration.GetSection("HostingSettings")["Protocol"];
    var path = Configuration.GetSection("HostingSettings")["BackPath"];
    var hostpath = Configuration.GetSection("HostingSettings")["Path"];

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - LMIS</title>
    <link rel="stylesheet" href="./lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="./css/site.css" />
    <link href="./css/custom.css" rel="stylesheet" />
    <link href="./lib/fontawesome/css/all.css" rel="stylesheet" />
</head>
<body>

    <section>
        <div class="container">
            <br />
            <h1 align="center" style="color: white;">Angle Dimension</h1>
            <h2 align="center" style="color: white;">Library Management System</h2>
            <br />
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-6">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center" id="UserLoginModal">

                            <h3 class="mb-5">Sign in</h3>

                            @if (TempData["success"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong>@TempData["success"]</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }

                            @if (TempData["error"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <strong>@TempData["error"]</strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }

                            <form asp-controller="Login" asp-action="LoginUser" method="post">
                                <div class="form-outline mb-4">
                                    <input asp-for="Username" type="email" id="typeEmailX-2" class="form-control form-control-lg" placeholder="Username" required />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Password" type="password" id="typePasswordX-2" class="form-control form-control-lg" placeholder="Password" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-start mb-4">
                                    <input asp-for="RememberMe" class="form-check-input"
                                           type="checkbox"
                                           value=""
                                           id="form1Example3" />
                                    <label class="form-check-label" for="form1Example3"> Remember Me </label>
                                </div>
                                <!--                            <button class="btn btn-primary btn-lg btn-block" id="login" type="submit"><i class="fas fa-sign-in-alt"></i> Login</button>
                                -->
                            </form>
                            <hr class="my-4">
                            <button class="btn btn-primary btn-lg btn-block" id="login" name="login"><i class="fas fa-sign-in-alt"></i> Login</button>
                            <a asp-controller="Register" asp-action="Index" class="btn btn-info btn-block"> <i class="fas fa-user-plus"></i> Register</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer text-center text-muted" style="padding-top: 0px; background-color: #2B296A;">
            <div class="container" style="color: white;">
                &copy;
                <script>document.write(/\d{4}/.exec(Date())[0])</script> - LMIS - Developed by <a style="color: white; text-decoration: underline;" href="#">Chikondi Nkhoma</a>
            </div>
        </footer>
    </section>
    <br />
    <script>
        var path = "@hostpath";
    </script>
    <script src="./lib/jquery/dist/jquery.min.js"></script>
    <script src="./lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./js/userlogin.js"></script>
    <script src="./js/site.js" asp-append-version="true"></script>
</body>
</html>